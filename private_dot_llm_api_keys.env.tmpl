{{- $secrets := output "sops" "--decrypt" (printf "%s/secrets.enc.yaml" .chezmoi.sourceDir) | fromYaml -}}
export DEEPSEEK_API_KEY={{ $secrets.llmApiKeys.deepseek }}
export GROQ_API_KEY={{ $secrets.llmApiKeys.groq }}
export ANTHROPIC_API_KEY={{ $secrets.llmApiKeys.anthropic }}

# Slightly different name for Zed editor integration
export ANTHROPIC_API_KEY_VAR={{ $secrets.llmApiKeys.anthropic }}

# Using Deepseek with OpenAI protocol.  Make sure API URL is set to https://api.deepseek.com
export OPENAI_API_KEY={{ $secrets.llmApiKeys.deepseek }}

